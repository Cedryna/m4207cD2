{% extends 'base.html.twig' %}


{% block title %}Affichage{% endblock %}

{% block body %}


<div class="list-group">


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">liste de fichiers</th>
      <th scope="col">login</th>
      <th scope="col">password</th>

    </tr>
  </thead>
  <tbody>
  {% for un_fichier in lst_fichier %}
    <tr class="table-active">
      <th scope="row"></th>
      <td>{{ un_fichier.id  }}</td>
      <td>{{ un_fichier.chemin  }}</td>

      <td>{{ un_fichier.actif  }}</td>
      <td><a href="/supprimerDocument/{{ un_fichier.id }}" target="_blank"> <input type="button" class="btn btn-danger" value="Supprimer"> </a></td>
    </tr>
   {% endfor %}

  </tbody>
</table>


</div>



{% endblock %}
